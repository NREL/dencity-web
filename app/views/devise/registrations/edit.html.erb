<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
  <%= f.email_field :email, autofocus: true, control_col: "col-sm-4" %>
  </fieldset>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently awaiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <fieldset>
    <%= f.password_field :password,label: "Password <i>(leave blank if you don't want to change it)</i>".html_safe, autocomplete: "off", control_col: "col-sm-4" %>
  </fieldset>

  <fieldset>
    <%= f.password_field :password_confirmation, autocomplete: "off", control_col: "col-sm-4" %>
  </fieldset>

  <fieldset>
    <%= f.password_field :current_password, label: "Current password <i>(to confirm your changes)</i>".html_safe , autocomplete: "off", control_col: "col-sm-4" %>
  </fieldset>

  <%= f.form_group do %>
    <%= f.submit "Update",  class: "btn btn-small btn-primary" %>
  <% end %>
<% end %>

<div class="pad-top-30">


<h3>Cancel my account</h3>

<fieldset class="pad-top-30">
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-small btn-warning" %></p>
</fieldset>
</div>

