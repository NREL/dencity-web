<h2>Register</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <%= f.email_field :email, autofocus: true, control_col: "col-sm-4" %>
  </fieldset>

  <fieldset>
    <%= f.password_field :password, autocomplete: "off", control_col: "col-sm-4" %>
  </fieldset>

  <fieldset>
    <%= f.password_field :password_confirmation, autocomplete: "off", control_col: "col-sm-4" %>
  </fieldset>

  <%= f.form_group do %>
    <%= f.submit "Register", class: "btn btn-small btn-primary" %>
  <% end %>

  <%= f.form_group do %>
    <%= render "devise/shared/links" %>
  <% end %>

<% end %>


