<h2>Metadata</h2>

<h3 class="edit-name"><%= @meta.name %> <% if can? :update, @meta %><%= link_to "[ edit ]", edit_meta_path(@meta), class: "edit-link" %><% end %></h3>
<table class="table table-striped">
  <% @meta.attributes.keys.each do |key| %>
    <% unless key == "created_at" or key == "updated_at" %>
      <tr>
        <th> <%= key == "_id" ? "ID" : key.humanize%></th>
        <td><% if key == "unit_id" %><%= link_to @meta.unit.symbol, unit_path(@meta.unit) %><% else %><%= @meta[key] %><% end %></td>
      </tr>
    <% end %>
  <% end %>
</table>
