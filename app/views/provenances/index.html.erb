<h2><% if can? :manage, :all %>All <% end %>Provenances <% if can? :create, Provenance %><%= link_to "[ add new provenance ]", new_provenance_path, class: "edit-link" %><% end %></h2>

<table class="tablesorter table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <% if can? :manage, :all %><th>User</th><% end %>
    <th>Actions</th>

  </tr>
  </thead>
  <tbody>
  <% @provenances.each do |prov| %>
    <tr>
      <td><%= link_to prov.analysis_name, prov %></td>
      <% if can? :manage, :all %><td><%=  prov.user.email %></td><% end %>
      <% if can? :update, prov %><td><%= link_to 'Edit', edit_provenance_path(prov) %> | <%= link_to 'Destroy', prov, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
    </tr>
  <% end %>
  </tbody>
</table>
