<h1>Units</h1>

<table class="tablesorter table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Display Name</th>
      <th>Type</th>
      <th>Symbol</th></th>
      <% if can? :update, Unit %><th>Actions</th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= link_to unit.name, unit %></td>
        <td><%= unit.display_name %></td>
        <td><%= unit.type %></td>
        <td><%= unit.symbol %></td>
        <% if can? :update, unit %><td><%= link_to 'Edit', edit_unit_path(unit) %> | <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Unit %>
  <div class="row-fluid">
    <%= link_to 'Add a Unit', new_unit_path, class: 'btn btn-small btn-primary' %>
  </div>
<% end %>
